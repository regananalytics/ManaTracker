{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ProcessMemory x86",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "src/ManaServer/libs/MemCore/src/libs/ProcessMemory/ProcessMemory/ProcessMemory.csproj",
                "--configuration", "Debug",
                "--property:Platform=x86"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build ProcessMemory x64",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "src/ManaServer/libs/MemCore/src/libs/ProcessMemory/ProcessMemory/ProcessMemory.csproj",
                "--configuration", "Debug",
                "--property:Platform=x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Copy ProcessMemory dlls",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path -Path 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory32.dll')",
                "{ Remove-Item 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory32.dll'};",
                "if (Test-Path -Path 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory64.dll')",
                "{ Remove-Item 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory64.dll'};",
                "Copy-Item 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory/ProcessMemory/bin/x86/Debug/netstandard2.0/ProcessMemory32.dll' 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory32.dll';",
                "Copy-Item 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory/ProcessMemory/bin/x64/Debug/netstandard2.0/ProcessMemory64.dll' 'src/ManaServer/libs/MemCore/src/libs/ProcessMemory64.dll';"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Build MemCore",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "src/ManaServer/libs/MemCore/src/MemCore/MemCore.csproj",
                "--no-dependencies",
                "--debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build ManaServer x86",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "src/ManaServer/src/ManaServer.csproj",
                "--debug"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build ManaTracker",
            "type": "process",
            "command": "C:/Users/verti/anaconda3/envs/mana/python.exe",
            "args": [
                "src/pyinstaller.py"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Copy Cfg",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path -Path 'build/cfg')",
                "{ Remove-Item -Recurse -Force 'build/cfg'};",
                "Copy-Item -Recurse 'cfg' 'build/cfg'"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Copy Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path -Path 'build/ManaServer')",
                "{ Remove-Item -Recurse -Force 'build/ManaServer'};",
                "Copy-Item -Recurse 'src/ManaServer/src/bin/Debug/net8.0/win-x86' 'build/ManaServer'"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Build Dir",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path -Path 'build')",
                "{ Remove-Item -Recurse -Force 'build'};",
                "New-Item -Name 'build' -ItemType 'directory';"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Copy Release Files",
            "type": "shell",
            "command": "powershell",
            "args": [
                "Copy-Item 'LICENSE' 'build/';",
                "Copy-Item 'README.md' 'build/';",
                "Set-Content -Path 'build/version.txt' -Value '${input:versionString}';"
            ]
        },
        {
            "label": "Zip Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "if (Test-Path -Path 'zip')",
                "{ Remove-Item -Recurse -Force 'zip'};",
                "Copy-Item -Recurse 'build' 'zip';",
                "Remove-Item -Recurse -Force 'zip/ManaServer';",
                "Compress-Archive -Path 'zip/*' -DestinationPath 'ManaTracker_${input:versionString}.zip' -Force",
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build ProcessMemory",
            "dependsOn": [
                "Build ProcessMemory x86",
                "Build ProcessMemory x64",
                "Copy ProcessMemory dlls"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build ManaServer",
            "dependsOn": [
                "Build ManaServer x86",
                "Copy Cfg",
                "Copy Build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build C#",
            "dependsOn": [
                "Build ProcessMemory",
                "Build ManaServer"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build C#",
                "Build ManaTracker",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build Release",
            "dependsOn": [
                "Clean Build Dir",
                "Copy Release Files",
                "Build ProcessMemory",
                "Build ManaServer",
                "Build ManaTracker",
                "Zip Build",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "versionString",
            "type": "promptString",
            "description": "Enter the build version"
        }
    ]
}